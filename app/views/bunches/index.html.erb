<marquee><h1>Bunches being sold by: <%= @seller.username %></h1></marquee>

<ul class='bunches-container'>
  <% @bunches.each do |bunch| %>
  <ul class='bunches'>
    <button>BUY IT NOW</button>
    <li>Cost: <%= bunch.cost %></li>
    <li>üçå: <%= bunch.quantity %></li>
    <li>Ripeness: <%= bunch.ripeness %></li>
  </ul>
  <% end %>
</ul>

<script>
  buttons = document.getElementsByTagName('button')

  for (let i = 0; i < buttons.length; i++) {
    const button = buttons[i];
    button.addEventListener('click', () => {
      button.classList.toggle('slide1');
    })
  }
</script>

